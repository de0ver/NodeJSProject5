<main class="container mx-auto flex flex-wrap py-6">
    <form class="bg-white shadow-md rounded px-8 mx-auto pt-6 pb-8" action="/login" method="POST">
        {{#if loginError}}
            {{#each loginError}}
                {{#ifCond this.field 'db'}}
                    <div class="p-4 mb-4 text-sm text-red-500 rounded-xl bg-red-50 border border-red-400 font-normal"
                         role="alert">
                        <p class="text-red-500 text-xs italic">{{this.message}}</p>
                    </div>
                {{/ifCond}}
            {{/each}}
        {{/if}}
        <div class="mb-4">
            <label class="block text-gray-800 text-sm font-bold mb-2" for="login">
                Логин пользователя
            </label>
            <input class="
                    focus:outline-none
                    focus:shadow-outline
                    appearance-none
                    shadow border
                    rounded w-full py-2 px-3
                    text-gray-700" id="login" name="login" type="text" placeholder="Введите логин">
        </div>
        <div class="mb-4">
            <label class="block text-gray-800 text-sm font-bold mb-2" for="password">
                Пароль
            </label>
            <input class="
                    focus:outline-none
                    focus:shadow-outline
                    appearance-none
                    shadow border
                    rounded w-full py-2 px-3
                    mb-3
                    text-gray-700" id="password" name="password" type="password" placeholder="Введите пароль">
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="flex items-center justify-between">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full focus:outline-none"
                    type="submit">
                Войти
            </button>
        </div>
    </form>
</main>